<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/_16sdp"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnBack"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/baseline_arrow_back_36"
        app:tint="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/etPhoneNumber"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_phone_android_24"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableTint="@color/light_gray"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:textColorHint="@color/light_gray"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_15sdp" />

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/etPassword"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/outline_visibility_24"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableTint="@color/light_gray"
                    android:hint="Password"
                    android:inputType="phone"
                    android:padding="@dimen/_15sdp"
                    android:textColor="@color/light_gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:onClick="loginL"
                android:background="@drawable/rect_round_red"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Login"
                    android:textAlignment="center"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_20sdp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/baseline_arrow_forward_36"
                    app:tint="@color/light_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:onClick="forgotPassword"
                    android:text="Forgot Password?"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="Register"
                    android:text="New User?"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_15sdp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>