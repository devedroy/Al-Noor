<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContributeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:src="@drawable/baseline_arrow_back_36"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_toEndOf="@id/back"
            android:text="CONTRIBUTE"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="X"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/outline_person_outline_24"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/light_gray"
                android:hint="Name"
                android:inputType="text"
                android:padding="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/baseline_phone_android_24"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/light_gray"
                android:hint="Mobile"
                android:inputType="phone"
                android:padding="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/outline_location_on_24"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/light_gray"
                android:hint="Address"
                android:inputType="text"
                android:padding="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_70sdp"
                android:background="@null"
                android:drawableStart="@drawable/outline_mail_outline_24"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/light_gray"
                android:hint="Message"
                android:inputType="text"
                android:padding="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_48sdp"
                android:background="@drawable/rect_round_red"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="SUBMIT"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>